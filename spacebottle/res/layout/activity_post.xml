<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ImageView
            android:id="@+id/eisei"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/eisei" />

        <ImageView
            android:id="@+id/earth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/earth"/>

        <LinearLayout
            android:id="@+id/limit_clock_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/earth"

            android:background="#f00"
            android:gravity="right"
            android:orientation="vertical" >



            <TextView
                android:id="@+id/limit_clock"
                android:layout_width="148dp"
                android:layout_height="wrap_content"
                android:background="#00f"
                android:gravity="bottom"
                android:text="あいうえおあいうえお"
                android:textColor="@color/white" />
        </LinearLayout>
        <Button
            android:id="@+id/post_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/limit_clock_container"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:padding="50px"
            android:background="#fd8"
            android:text="BUTTON"/>

        <TextView
            android:id="@+id/message_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/post_button"
            android:layout_below="@id/eisei"

            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#fd8"
            android:textColor="@color/black"
            android:padding="50px"

            android:text="TextView" />

    </RelativeLayout>

</FrameLayout>
