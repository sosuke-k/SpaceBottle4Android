<?xml version="1.0" encoding="utf-8"?><selector    xmlns:android="http://schemas.android.com/apk/res/android">     <!-- ボタンが押されたときの定義 -->    <item android:state_pressed="true" >        <shape            android:shape="rectangle">            <solid                android:color="@color/yellow" />            <stroke                android:width="1dp"                android:color="@color/dimgray" />            <corners                android:radius="15dp" />            <padding                android:left="10dp"                android:top="10dp"                android:right="10dp"                android:bottom="10dp" />            <size                android:height="30dp"                android:width="30dp" />        </shape>    </item>     <!-- ボタンが押されていないときの定義 -->    <item android:state_pressed="false">                <shape            android:shape="rectangle">            <solid                android:color="@color/gray" />            <stroke                android:width="1dp"                android:color="@color/dimgray" />            <corners                android:radius="15dp" />            <padding                android:left="10dp"                android:top="10dp"                android:right="10dp"                android:bottom="10dp" />            <size                android:height="30dp"                android:width="30dp" />        </shape>    </item></selector>